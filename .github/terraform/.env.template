# GitHub Terraform Configuration
# Copy this file to .env and fill in your values
# Then source it before running terraform: source .env

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, admin:repo_hook, delete_repo
export GITHUB_TOKEN="your_github_token_here"

# GitHub Account
export GITHUB_OWNER="power-edge"
export GITHUB_REPOSITORY="mlb_statsapi_data_platform"

# Terraform Variables
export TF_VAR_github_owner="${GITHUB_OWNER}"
export TF_VAR_github_repository="${GITHUB_REPOSITORY}"
export TF_VAR_github_token="${GITHUB_TOKEN}"
